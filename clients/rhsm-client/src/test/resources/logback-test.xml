<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <contextName>rhsm-subscriptions</contextName>
  <appender name="RootAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} [%t] %-5p %logger{0}[%L] - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.candlepin" level="INFO"/>
  <logger name="org.springframework.retry" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="RootAppender"/>
  </root>
</configuration>
